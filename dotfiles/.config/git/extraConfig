# vim:ft=gitconfig
[user]
    name = Julia Ryan
    email = p1n3appl3@users.noreply.github.com
	signingkey = ~/.ssh/id_ed25519.pub
[alias]
    b = branch
    s = status
    c = commit --verbose
    ca = commit -a --verbose
    cm = commit -m
    cam = commit -a -m
    d = diff
    f = fetch --all
    ls = ls-files
    ll = "!log() { GIT_PAGER='less -+X' git log --pretty=\
format:\"%C(yellow)%h %Cred%ad %Cblue%>(14,mtrunc)%an%Cgreen%d \
%Creset%<|(-1,trunc)%s\" $@; } ; log"
    l = ll -n 20
    vi = "!vi() { git diff ${@:-HEAD^} --diff-filter=d --name-only | xargs nvim; } ; vi"
    changed = diff --stat HEAD~1
    undeadname = "!undeadname() { git -c rebase.instructionFormat='%s%nexec GIT_COMMITTER_DATE=\"%cD\" GIT_AUTHOR_DATE=\"%aD\" git commit --amend --no-edit --reset-author' rebase -f --root } ; undeadname"
[diff]
    colorMoved = default
[diff "age"]
    textconv = "rage -di ~/.ssh/id_ed25519"
[diff "image"]
    textconv = "exiftool -ImageSize -FileSize -FileType -TimeCreated -CreatorTool -Duration -FileModifyDate"
    cachetextconv = true
[merge]
    tool = nvimdiff
    conflictstyle = zdiff3
[mergetool]
    keepBackup = false
    prompt = true
[mergetool "nvimdiff"]
    layout = "LOCAL,BASE,REMOTE / MERGED + BASE,LOCAL + \
        BASE,REMOTE + (LOCAL/BASE/REMOTE),MERGED"
