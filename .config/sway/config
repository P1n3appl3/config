# vim: ft=conf
font monospace 8
include ~/.config/i3/common
include current_device # a symlink to "laptop" or "desktop"

titlebar_padding 5 2
default_border pixel 1
default_floating_border pixel 1

# TODO: rev null separated list in bash?
bindsym --no-warn $mod+v exec ~/.config/scripts/clipboard.sh
bindsym --no-warn $mod+q exec rofi -show calc -no-sort -calc-command "wl-copy {result}"

exec wl-paste -w ~/.config/scripts/cliphandler.sh
exec swayidle -w timeout 600 'swaymsg "output * dpms off"' \
    resume 'swaymsg "output * dpms on"'
