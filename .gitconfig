[core]
    editor = vim
    excludesfile = /home/joseph/.gitignore
    autocrlf = input
    pager = delta
[alias]
    a = add
    b = branch
    s = status
    c = commit --verbose
    ca = commit -a --verbose
    cm = commit -m
    cam = commit -a -m
    d = diff
    f = fetch
    fo = fetch origin
    fu = fetch upstream
    ls = ls-files
    pr = prune -v
    l = log --pretty=format:'%C(yellow)%h %Cred%as %Cblue%<(20,trunc)%an%Cgreen%d %Creset%s'
[push]
    default = matching
[pager]
    branch = false
[commit]
    gpgsign = false
[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true
[gpg]
    program = gpg2
[branch]
    autosetuprebase = always
[submodule]
    recurse = true
[init]
    defaultBranch = main
[interactive]
    diffFilter = delta --color-only
[delta]
    navigate = true
[merge]
    conflictstyle = diff3
[diff]
    colorMoved = default
