{
  // UI
  "theme": "Catppuccin Mocha",
  "helix_mode": false,
  "hover_popover_delay": 300,
  "drag_and_drop_selection": {
    "delay": 300
  },
  "scroll_sensitivity": 1.0,
  "on_last_window_closed": "platform_default",
  "restore_on_startup": "none",
  "confirm_quit": true,
  "agent_servers": {
    "claude": {
      "default_mode": "acceptEdits"
    }
  },
  "log": {
    // "worktree": "debug"
  },
  "base_keymap": "VSCode",
  // "relative_line_numbers": "disabled",
  "use_system_path_prompts": false,
  "git_panel": { "dock": "right" },
  "collaboration_panel": { "dock": "right" },
  "outline_panel": { "dock": "right" },
  "project_panel": { "dock": "right" },
  "debugger": { "dock": "bottom" },
  "bottom_dock_layout": "full",
  "toolbar": { "selections_menu": false, "quick_actions": false },
  "tab_bar": {
    "show": false,
    "show_nav_history_buttons": false,
    "show_tab_bar_buttons": false
  },
  "tabs": { "git_status": true },
  "preview_tabs": {
    "enabled": false,
    "enable_preview_from_code_navigation": true
  },
  "vertical_scroll_margin": 6,
  "icon_theme": "Catppuccin Mocha",
  "gutter": {
    "line_numbers": false,
    "folds": false,
    "runnables": false,
    "breakpoints": true
  },
  "inline_code_actions": false,
  "lsp_document_colors": "inlay",
  "minimap": { "show": "never", "current_line_highlight": "gutter" },
  "current_line_highlight": "gutter",
  "indent_guides": { "enabled": false },
  "title_bar": {
    // "show": "never",
    "show_sign_in": false,
    "show_user_picture": false,
    "show_branch_icon": true
  },
  "experimental.theme_overrides": {
    "editor.gutter.background": "#2e2e3e"
    // "editor.foreground": "#FFFFFF",
    // "editor.background": "#000000",
    // "text": "#FFFFFF",
  },

  // general functionality
  "vim_mode": true,
  "vim": {
    // "default_mode": "helix_normal",
    "use_system_clipboard": "on_yank"
  },
  "load_direnv": "shell_hook",
  "terminal": {
    // "font_family": "Monaspace Krypton",
    "line_height": "standard",
    "dock": "right",
    "env": {
      "GIT_EDITOR": "zed --wait"
    }
    // "shell": {"program": "nu"}
    // "shell": {"program": "fish"}
  },
  "format_on_save": "off",
  "middle_click_paste": false,
  "inlay_hints": {
    "edit_debounce_ms": 700,
    "toggle_on_modifiers_press": { "alt": true }
  },
  "audio": {
    "experimental.rodio_audio": false,
    "experimental.denoise": true,
    "experimental.auto_speaker_volume": true
  },
  "search": {
    "regex": true,
    "button": false
  },
  "auto_update": true,

  // language support
  "languages": {
    "Rust": {},
    "Nix": { "tab_size": 2, "language_servers": ["nil", "!nixd"] },
    "Lua": { "language_servers": ["lua-language-server"] },
    "Markdown": { "soft_wrap": "editor_width" }, // or "bounded"?
    "JavaScript": { "tab_size": 4 },
    "Proto": { "enable_language_server": false }
  },

  "lsp": {
    "rust-analyzer": {
      "initialization_options": {
        "cargo": {
          // "buildScripts": { "enable": false },
          "features": "all"
        },
        "checkOnSave": true,
        // "cachePriming": { "enable": false }
        // "files": { "watcher": "server" },
        "check": {
          // "command": "clippy",
          "workspace": false
        },
        "diagnostics": {
          // "experimental": { "enable": true },
          "enable": false
        }
      }
    },
    "nil": {
      "initialization_options": {
        "formatting": { "command": ["nixfmt"] }
      }
    }
  },

  // ai
  "agent": {
    "always_allow_tool_actions": true,
    "default_profile": "ask",
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-sonnet-4-5"
    }
  },
  "show_edit_predictions": true,
  "features": { "edit_prediction_provider": "zed" },
  "edit_predictions": {
    "mode": "subtle",
    "disabled_globs": ["*.md"]
  },

  //extensions
  "auto_install_extensions": {
    "catppuccin": true,
    "catppuccin-icons": true,
    // "activitywatch": true
    // "discord-presence": true, // lmao
    // TODO: pick a spell checker "codebook"/"cspell"/"harper"
    "git-firefly": true,
    "html": true,
    "toml": true,
    // "cargo-tom": true, // TODO: false positives and nix
    "nix": true,
    "lua": true,
    "kdl": true,
    "assembly": true,
    "typst": true,
    "color-highlight": true
  },

  // remote
  "ssh_connections": [
    {
      "host": "Cortana",
      "args": [],
      "projects": []
    },
    {
      "host": "localhost",
      "args": [],
      "projects": [
        {
          "paths": ["/Users/julia/dev/website"]
        },
        {
          "paths": ["/tmp/testproj"]
        }
      ]
    },
    {
      "host": "julia.blue",
      "args": [],
      "projects": []
    },
    {
      "host": "192.168.1.80",
      "args": [],
      "projects": [
        {
          "paths": ["/home/julia/dev/obs-gamepad"]
        }
      ],
      "nickname": "HAL"
    }
  ],

  // conditional
  "windows": {
    "theme": "Catppuccin Mocha"
  },
  "macos": {
    "ui_font_size": 13,
    "buffer_font_size": 14.0,
    "buffer_font_family": "Source Code Pro",
    // "buffer_font_family": "Monaspace Neon Var",
    // "buffer_font_family": "JetBrains Mono Bold",
    // "buffer_font_family": "Terminus (TTF)",

    "buffer_font_features": { "calt": true },
    // "buffer_font_weight": 400,
    "preferred_line_length": 92,
    "buffer_line_height": "standard",
    "theme": "Catppuccin Mocha (blue)"
  },
  "linux": {
    "theme": "Catppuccin Mocha"
  },

  "dev": {
    "experimental.theme_overrides": {
      "title_bar.background": "#903050"
    }
  },
  "nightly": {
    "experimental.theme_overrides": {
      "version_control.ignored": "#123456"
    }
  },
  "preview": {
    "experimental.theme_overrides": {
      "title_bar.background": "#397CE1"
    }
  },
  "stable": {}
}
