# Open some things as floating windows by default
for_window [class="Pavucontrol"] floating enable
for_window [class="feh"] floating enable
for_window [class="mpv"] floating enable
for_window [class="fcadefbneo.exe"] floating enable

# Open some things in their assigned workspace
assign [class="discord"] $ws4
assign [class="Caprine"] $ws4
assign [class="telegram-desktop"] $ws4
assign [class="obs"] $ws8
assign [class="Steam"] $ws9
assign [class="Dolphin-emu"] $ws9
assign [class="dotnet"] $ws9 # Osu

# Start things that aren't systemd services
# $run picom -b -experimental-backends --backend xrender
$run nm-applet

# Notifications
focus_on_window_activation focus
bindsym $mod+x [urgent=latest] focus

# Application launcher (windows key) and various other launchers
bindsym Super_L $run rofi -show drun
bindsym $mod+Return $run kitty -1
bindsym $mod+slash $run rofi -show window
bindsym $mod+v exec CM_LAUNCHER=rofi CM_HISTLENGTH=20 clipmenu
bindsym $mod+m $run ~/.config/scripts/song.sh play
bindsym $mod+Shift+m $run ~/.config/scripts/song.sh
bindsym $mod+u $run rofimoji
bindsym $mod+q $run rofi -show calc -no-sort \
    -calc-command "xclip -selection c <<< {result}'"

# Media keys
bindsym XF86MonBrightnessUp $run light -A 5
bindsym XF86MonBrightnessDown $run light -U 5
bindsym XF86AudioRaiseVolume $run pamixer -i 5
bindsym XF86AudioLowerVolume $run pamixer -d 5
bindsym XF86AudioMute $run pamixer -t
bindsym XF86AudioPrev $run mpc prev
bindsym XF86AudioPlay $run mpc toggle
bindsym XF86AudioNext $run mpc next

# Map caps lock to escape
exec_always setxkbmap -option caps:escape

# Screenshots
bindsym Shift+Print --release $run ~/.config/scripts/screenshot.sh
bindsym Print $run ~/.config/scripts/screenshot.sh s
