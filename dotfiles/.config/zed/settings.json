{
  // UI
  "base_keymap": "VSCode",
  "relative_line_numbers": false,
  "use_system_path_prompts": false,
  "git_panel": { "dock": "right" },
  "collaboration_panel": { "dock": "right" },
  "outline_panel": { "dock": "right" },
  "project_panel": { "dock": "right" },
  "debugger": { "dock": "right" },
  "toolbar": { "selections_menu": false, "quick_actions": false },
  "tab_bar": {
    "show": false,
    "show_nav_history_buttons": false,
    "show_tab_bar_buttons": false
  },
  "tabs": { "git_status": true },
  "preview_tabs": {
    "enabled": false,
    "enable_preview_from_code_navigation": true
  },
  "vertical_scroll_margin": 6,
  "ui_font_size": 14,
  "buffer_font_size": 13.0,
  // "font_family": "Symbols Nerd Font",
  // "font_family": ["Source Code Pro"],
  // "ui_font_fallbacks": ["Symbols Nerd Font"],
  // "buffer_font_fallbacks": ["Symbols Nerd Font"],
  "preferred_line_length": 92,
  "theme": "Catppuccin Mocha (blue)",
  "icon_theme": "Catppuccin Mocha",
  "gutter": {
    "line_numbers": false,
    "folds": false,
    "runnables": false,
    "breakpoints": true
  },
  "inline_code_actions": false,
  "minimap": { "show": "never", "current_line_highlight": "gutter" },
  "current_line_highlight": "gutter",
  "indent_guides": { "enabled": false },
  "title_bar": {
    "show_sign_in": false,
    "show_user_picture": false,
    "show_branch_icon": true
  },
  "experimental.theme_overrides": {
    "editor.gutter.background": "#2e2e3e"
  },

  // general functionality
  "vim_mode": true,
  "vim": {
    // "default_mode": "helix_normal",
    "use_system_clipboard": "on_yank"
  },
  "restore_on_startup": "none",
  "load_direnv": "shell_hook",
  "terminal": {
    "line_height": "standard",
    "dock": "right",
    "env": {
      "GIT_EDITOR": "zed --wait"
    }
    // "shell": {"program": "nu"}
    // "shell": {"program": "fish"}
  },
  "format_on_save": "off",
  "middle_click_paste": false,
  "inlay_hints": {
    "toggle_on_modifiers_press": { "alt": true }
  },
  "search": {
    "regex": true,
    "button": false
  },
  "file_scan_exclusions": [
    "crates/agent_ui" // ai stuff from work that always shows up in search results since "agent" is alphabetically early
  ],

  // language support
  "languages": {
    "Rust": {},
    "Nix": { "tab_size": 2, "language_servers": ["nil", "!nixd"] },
    "Lua": { "language_servers": ["lua-language-server"] },
    "Markdown": { "soft_wrap": "editor_width" }, // or "bounded"?
    "JavaScript": { "tab_size": 4 },
    "Proto": { "enable_language_server": false }
  },

  "lsp": {
    "rust-analyzer": {
      "cargo": {
        // "buildScripts": { "enable": false },
        "features": "all"
      },
      "initialization_options": {
        // "checkOnSave": false,
        // "cachePriming": { "enable": false }
        // "files": { "watcher": "server" },
        "check": {
          "workspace": false
          // "command": "clippy"
        },
        "diagnostics": {
          "enable": false
          // "experimental": { "enable": true }
        }
      }
    },
    "nil": {
      "initialization_options": {
        "formatting": { "command": ["nixfmt"] }
      }
    }
  },

  // ai
  "agent": {
    "default_profile": "ask",
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-sonnet-4"
    }
  },
  "show_edit_predictions": true,
  "features": { "edit_prediction_provider": "zed" },
  "edit_predictions": {
    "mode": "subtle",
    "disabled_globs": ["*.md"]
  },

  //extensions
  "auto_install_extensions": {
    "catppuccin": true,
    "catppuccin-icons": true,
    // "activitywatch": true
    // "discord-presence": true, // lmao
    // TODO: pick a spell checker "codebook"/"cspell"/"harper"
    "git-firefly": true,
    "html": true,
    "toml": true,
    // "cargo-tom": true, // TODO: false positives and nix
    "nix": true,
    "lua": true,
    "ruff": true,
    "ty": true,
    "kdl": true,
    "assembly": true,
    "typst": true
  },

  // remote
  "ssh_connections": [
    {
      "host": "HAL",
      "args": ["-J", "julia.blue"],
      "projects": [
        { "paths": ["~/config"] },
        { "paths": ["~/dev/tetris"] },
        { "paths": ["~/dev/website"] },
        { "paths": ["~/dev/zed"] }
      ]
    }
  ],

  // conditional
  "dev": {
    "experimental.theme_overrides": {
      "title_bar.background": "#903050"
    }
  },
  "nightly": {
    "experimental.theme_overrides": {
      "version_control.ignored": "#123456"
    }
  },
  "preview": {
    "experimental.theme_overrides": {
      "title_bar.background": "#397CE1"
    }
  },
  "stable": {}
}
