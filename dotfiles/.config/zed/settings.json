{
  "vim_mode": true,
  "restore_on_startup": "none",
  "tab_bar": { "show": false },
  "vertical_scroll_margin": 6,
  "ui_font_size": 18,
  "buffer_font_size": 19.0,
  // "font_family": "Symbols Nerd Font",
  // "font_family": ["Source Code Pro"],
  // "ui_font_fallbacks": ["Symbols Nerd Font"],
  // "buffer_font_fallbacks": ["Symbols Nerd Font"],
  "preferred_line_length": 92,
  "theme": {
    "mode": "dark",
    "light": "Catppuccin Latte",
    "dark": "Catppuccin Mocha"
  },
  "gutter": {
    "line_numbers": false,
    "folds": false,
    "code_actions": false
  },
  "load_direnv": "shell_hook",
  "terminal": {
    "env": {
      "GIT_EDITOR": "zed --wait"
    }
  },
  "current_line_highlight": "gutter",
  "indent_guides": { "enabled": false },
  "lsp": {
    "rust-analyzer": {
      "initialization_options": {
        "check": { "workspace": false, "command": "clippy" },
        "diagnostics": { "experimental": { "enable": true } },
        "cachePriming": { "enable": false }
      }
    }
  },
  "languages": {
    "Rust": {},
    "Nix": { "tab_size": 2, "language_servers": ["nil", "!nixd"] },
    "Markdown": { "soft_wrap": "preferred_line_length" },
    "JavaScript": { "tab_size": 4 }
  },
  "format_on_save": "off",
  "features": {
    "copilot": false,
    "edit_prediction_provider": "none"
  },
  "assistant": { "enabled": false, "button": false, "version": "2" },
  "show_edit_predictions": false,
  "auto_install_extensions": { "catppuccin": true, "catppuccin-icons": true }
}
