[user]
    name = Joseph Ryan
    email = josephryan3.14@gmail.com
[core]
    editor = nvim
	excludesfile = ~/.gitignore
    autocrlf = input
    pager = delta
[alias]
    b = branch
    s = status
    c = commit --verbose
    ca = commit -a --verbose
    cm = commit -m
    cam = commit -a -m
    d = diff
    f = fetch --all
    ls = ls-files
    ll = "!log() { GIT_PAGER='less -+X' git log \
--pretty=format:\"%C(yellow)%h %Cred%ad %Cblue%<(14,mtrunc)%an%Cgreen%d \
%Creset%<($((`tput cols` - 35)),trunc)%s\" $@; } ; log"
    l = ll -n 20
    vi = "!vi() { git diff ${@:-HEAD^} --name-only | xargs nvim; } ; vi"
    changed = diff --stat HEAD~1
[log]
    date=format:%-m/%-d/%y
[push]
    default = matching
[pager]
    branch = false
[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true
[branch]
    autosetuprebase = always
[submodule]
    recurse = true
[init]
    defaultBranch = main
[interactive]
    diffFilter = delta --color-only
[delta]
    navigate = true
[diff]
    colorMoved = default
[merge]
    tool = nvimdiff
    conflictstyle = zdiff3
[mergetool]
    keepBackup = false
    prompt = true
[mergetool "nvimdiff"] # TODO: fugitive? or just some key bindings?
    layout = "LOCAL,BASE,REMOTE / MERGED + BASE,LOCAL + \
        BASE,REMOTE + (LOCAL/BASE/REMOTE),MERGED"
[http]
    cookiefile = ~/.gitcookies
